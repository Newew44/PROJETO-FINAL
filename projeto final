const reservas = [];

function criarReserva() {
  let criar = prompt("Deseja fazer uma reserva?")
  if (criar === "sim") {
   let nome = prompt("Digite seu nome")
   let data = prompt("Digite a data")
   let hora = prompt("Digite a hora")
   let sala = prompt("Digite a sala")
   let finalidade = prompt("Digite a finalidade")
    reservas.push({nome: nome, data: data, hora: hora, sala: sala, finalidade: finalidade })
  } else {
    console.log("ok '-'")
  }
}


